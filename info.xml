<?xml version="1.0"?>
<extension key="ca.nodisys.netbanx" type="payment">
  <file>netbanx</file>
  <name>Netbanx</name>
  <description>Netbanx payment gateway for CiviCRM (hosted page, autonomous, without redirection).</description>
  <license>AGPL 3</license>
  <maintainer>
    <author>Mathieu Lutfy</author>
    <email>mathieu@nodisys.ca</email>
  </maintainer>
  <releaseDate>2013-11-07</releaseDate>
  <version>1.0</version>
  <develStage>alpha</develStage>
  <compatibility>
    <ver>4.2</ver>
    <ver>4.3</ver>
    <ver>4.4</ver>
  </compatibility>
  <comments></comments>
  <civix>
    <namespace>CRM/Netbanx</namespace>
  </civix>
  <urls>
    <url desc="Main Extension Page">https://github.com/mlutfy/ca.nodisys.netbanx</url>
    <url desc="Documentation">https://github.com/mlutfy/ca.nodisys.netbanx/blob/master/README.md</url>
    <url desc="Support">http://forum.civicrm.org/index.php/board,57.0.html</url>
    <url desc="Licensing">http://civicrm.org/licensing</url>
  </urls>
  <typeInfo>
    <userNameLabel>Store ID</userNameLabel>
    <passwordLabel>Password</passwordLabel>
    <subjectLabel>Account Number</subjectLabel>
    <urlSiteDefault>https://webservices.optimalpayments.com/</urlSiteDefault>
    <urlApiDefault></urlApiDefault>
    <urlRecurDefault>https://webservices.optimalpayments.com/</urlRecurDefault>
    <urlSiteTestDefault>https://webservices.test.optimalpayments.com/</urlSiteTestDefault>
    <urlApiTestDefault></urlApiTestDefault>
    <urlRecurTestDefault>https://webservices.test.optimalpayments.com/</urlRecurTestDefault>
    <urlButtonDefault></urlButtonDefault>
    <urlButtonTestDefault></urlButtonTestDefault>
    <billingMode>form</billingMode>
    <isRecur>1</isRecur>
    <paymentType>1</paymentType>
  </typeInfo>
</extension>
